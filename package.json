{
  "license": "MIT",
  "name": "shakl",
  "description": "A utility to create styled components in React Native.",
  "version": "0.0.10",
  "main": "lib/index.js",
  "react-native": "lib/rn.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sonaye/shakl.git"
  },
  "peerDependencies": {
    "react": ">=16.3.0"
  },
  "devDependencies": {
    "@types/jest": "23.3.1",
    "@types/react": "16.4.7",
    "@types/react-native": "~0.55",
    "@types/react-test-renderer": "16.0.1",
    "babel-core": "6.26.3",
    "babel-plugin-external-helpers": "6.22.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "benchmark": "2.1.4",
    "emotion": "9.2.6",
    "glamorous-native": "1.4.0",
    "jest": "23.4.2",
    "react": "16.3.1",
    "react-emotion": "9.2.6",
    "react-native": "0.55.4",
    "react-test-renderer": "16.3.1",
    "rollup": "0.63.5",
    "rollup-plugin-babel": "3.0.7",
    "styled-components": "3.3.3"
  },
  "scripts": {
    "test": "jest /test",
    "coverage": "yarn test --coverage",
    "postcoverage": "open -a Chrome coverage/lcov-report/index.html",
    "benchmark": "jest /benchmark",
    "postbenchmark": "open -a Chrome benchmark/chart/index.html",
    "prebuild": "rm -rf lib",
    "build": "rollup -c && rollup -c --environment TARGET:react-native"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "verbose": true,
    "preset": "react-native",
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-)?react-native|glamorous-native)"
    ]
  },
  "files": [
    "lib"
  ]
}
