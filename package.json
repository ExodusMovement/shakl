{
  "license": "MIT",
  "name": "shakl",
  "description": "A utility to create styled components in React Native.",
  "version": "0.0.4",
  "main": "lib/index.js",
  "react-native": "lib/rn.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sonaye/shakl.git"
  },
  "peerDependencies": {
    "react": ">=16.3.0"
  },
  "devDependencies": {
    "@types/jest": "23.1.4",
    "@types/react": "16.4.6",
    "@types/react-native": "0.55.28",
    "@types/react-test-renderer": "16.0.1",
    "babel-eslint": "8.2.5",
    "babel-plugin-external-helpers": "6.22.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "benchmark": "2.1.4",
    "emotion": "9.2.5",
    "eslint": "5.0.1",
    "eslint-config-airbnb": "17.0.0",
    "eslint-plugin-import": "2.13.0",
    "eslint-plugin-jsx-a11y": "6.1.0",
    "eslint-plugin-react": "7.10.0",
    "glamorous-native": "1.4.0",
    "jest": "23.3.0",
    "react": "16.3.1",
    "react-emotion": "9.2.5",
    "react-native": "0.55.4",
    "react-test-renderer": "16.3.1",
    "rollup": "0.62.0",
    "rollup-plugin-babel": "3.0.7",
    "styled-components": "3.3.3"
  },
  "scripts": {
    "lint": "eslint src test",
    "test": "jest /test",
    "coverage": "yarn test --coverage",
    "postcoverage": "open -a Chrome coverage/lcov-report/index.html",
    "benchmark": "jest /benchmark",
    "postbenchmark": "open -a Chrome benchmark/chart/index.html",
    "prebuild": "rm -rf lib",
    "build": "rollup -c && rollup -c --environment TARGET:react-native"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "verbose": true,
    "preset": "react-native",
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-)?react-native|glamorous-native)"
    ]
  },
  "files": [
    "lib"
  ]
}
